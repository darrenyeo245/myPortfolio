---
import "../styles/global.css";
import "../../public/sun.svg";
import "../../public/moon.svg";
import ColorMode from "../components/colorMode.astro";
const currentPath = Astro.url.pathname;
---
<nav class="flex justify-between p-4">
    <div class="flex-1">
        <a href="/" class="text-2xl font-bold hover:text-hover ">Darren Yeo</a>
    </div>
    <div class="flex justify-center gap-4">
        <a href="/"
           class={`hover:text-hover  ${currentPath === '/' ? 'font-bold border-b-4 border-accent pb-2 dark:border-accent-dark' : ''}`}>Home</a>
        <a href="/projects"
           class={`hover:text-hover  ${currentPath === '/projects' ? 'font-bold border-b-4 border-accent pb-2  dark:border-accent-dark' : ''}`}>Projects</a>
        <a href="/contact"
           class={`hover:text-hover  ${currentPath === '/contact' ? 'font-bold border-b-4 border-accent pb-2  dark:border-accent-dark' : ''}`}>Contact</a>
    </div>
    <div class="flex-1 flex justify-end">
        <button type="button" id="theme-selector">
            <span class="sr-only">Enable <span class="dark:hidden">light</span><span
                    class="hidden dark:inline">dark</span> mode</span>
            <img src="moon.svg" alt="Dark Mode Icon" class="dark:hidden w-6 h-6">
            <img src="sun.svg" alt="Light Mode Icon" class="hidden dark:inline w-6 h-6">
        </button>
            <script>
                document.getElementById('theme-selector')?.addEventListener('click', () => {
                    console.log('Theme toggle clicked');
                    if (localStorage.theme === 'dark') {
                        console.log('Switching to light mode');
                        localStorage.theme = 'light';
                        document.documentElement.classList.remove('dark');
                    } else {
                        console.log('Switching to dark mode');
                        localStorage.theme = 'dark';
                        document.documentElement.classList.add('dark');
                    }
                });
            </script>

</nav>

